{
  "name": "@maiertech/eslint-config",
  "version": "0.8.0",
  "author": "Thilo Maier <git@maier.asia>",
  "description": "Sharable ESLint config for @maiertech projects.",
  "repository": "github:maiertech/eslint-config",
  "license": "MIT",
  "keywords": [
    "eslint",
    "eslintconfig",
    "prettier"
  ],
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "engines": {
    "node": ">=10.20.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "microbundle --format modern,cjs",
    "watch": "microbundle watch --format modern,cjs --compress false",
    "version": "changeset version && npm run format",
    "release": "changeset publish",
    "lint": "npm run lint:code && npm run lint:other",
    "lint:code": "eslint . --ignore-path .gitignore",
    "lint:other": "npm run prettier -- --check",
    "prettier": "prettier \"**/*.md\" --ignore-path .gitignore",
    "format": "npm run format:code && npm run format:other",
    "format:code": "npm run lint:code -- --fix",
    "format:other": "npm run prettier -- --write",
    "purge": "rm -rf ./node_modules"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "peerDependencies": {
    "eslint": "^6.8.0",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "@shopify/eslint-plugin": "36.1.0"
  },
  "devDependencies": {
    "@changesets/cli": "2.7.1",
    "eslint": "6.8.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.2",
    "microbundle": "0.12.0",
    "npm-check": "5.9.2",
    "prettier": "2.0.5"
  }
}
