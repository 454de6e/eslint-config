{
  "name": "@maiertech/eslint-config",
  "version": "0.16.0",
  "author": "Thilo Maier <git@maier.asia>",
  "description": "Sharable config for ESLint.",
  "repository": "github:maiertech/eslint-config",
  "license": "MIT",
  "keywords": [
    "eslint",
    "eslintconfig",
    "prettier"
  ],
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "microbundle --format modern,cjs",
    "watch": "microbundle watch --format modern,cjs --compress false",
    "version": "changeset version && npm run format",
    "release": "changeset publish",
    "prettier": "prettier . --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint . --ignore-path .gitignore",
    "lint:prettier": "npm run prettier -- --check",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "npm run lint:eslint -- --fix",
    "format:prettier": "npm run prettier -- --write",
    "purge": "rm -rf ./node_modules",
    "upgrade-interactive": "npx npm-check -u"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "peerDependencies": {
    "eslint": "^7.14.0",
    "prettier": "^2.2.1"
  },
  "dependencies": {
    "@shopify/eslint-plugin": "^39.0.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.12.0",
    "@maiertech/prettier-config": "^0.2.1",
    "eslint": "^7.14.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "microbundle": "^0.12.4",
    "npm-check": "^5.9.2",
    "prettier": "^2.2.1"
  }
}
