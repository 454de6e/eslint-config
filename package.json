{
  "name": "@maiertech/eslint-config",
  "version": "0.8.0",
  "author": "Thilo Maier <git@maier.asia>",
  "description": "Sharable ESLint config for @maiertech projects.",
  "keywords": [
    "eslint",
    "eslintconfig"
  ],
  "license": "MIT",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "repository": "github:maiertech/eslint-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "lint": "npm run lint:code && npm run lint:other",
    "lint:code": "eslint . --ignore-path .gitignore",
    "lint:other": "npm run prettier -- --check",
    "prettier": "prettier \"**/*.md\" --ignore-path .gitignore",
    "format": "npm run format:code && npm run format:other",
    "format:code": "npm run lint:code -- --fix",
    "format:other": "npm run prettier -- --write",
    "purge": "rm -rf ./node_modules",
    "test": "npm run lint"
  },
  "peerDependencies": {
    "babel-eslint": "9.x",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-react-app": "^3.0.8",
    "eslint-plugin-flowtype": "2.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x"
  },
  "devDependencies": {
    "@changesets/cli": "2.6.5",
    "babel-eslint": "9.0.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-config-react-app": "3.0.8",
    "eslint-plugin-flowtype": "2.50.3",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.19.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "node": "12.16.2",
    "npm-check": "5.9.2",
    "prettier": "^2.0.5"
  }
}
